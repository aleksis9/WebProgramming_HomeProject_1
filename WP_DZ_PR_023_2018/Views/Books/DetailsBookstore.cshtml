@using WP_DZ_PR_23_2018.Models;

@{
    ViewBag.Title = "DetailsBookstore";
}

@{
    Knjizara k = (Knjizara)ViewBag.Detalji;
    int brojKnjiga = ViewBag.BrojKnjiga;
    int brojKopija = ViewBag.BrojKopija;
}

<h2 style="text-align:center; color:black; font-size:30px;">Detalji o knjizari: @k.Naziv (@k.Adresa)</h2>

<br />

<p style="font-family:Cambria; font-size:22px; text-align:center;"><b>Naziv: </b>@k.Naziv</p>
<p style="font-family:Cambria; font-size:22px; text-align:center;"><b>Adresa: </b>@k.Adresa</p>
<p style="font-family:Cambria; font-size:22px; text-align:center;"><b>Broj knjiga: </b>@brojKnjiga</p>
<p style="font-family:Cambria; font-size:22px; text-align:center;"><b>Broj kopija na stanju: </b>@brojKopija</p>

<br />

@if(brojKnjiga != 0)
{
      <table>
          <tr style="border-bottom:2px solid black; border-top:2px solid black;">
              <td width="800" align="center" style="font-weight:bold; font-size:20px; font-family:Cambria;">Naziv</td>
              <td width="800" align="center" style="font-weight:bold; font-size:20px; font-family:Cambria;">Autor</td>
              <td width="300" align="center" style="font-weight:bold; font-size:20px; font-family:Cambria;">Zanr</td>
              <td width="300" align="center" style="font-weight:bold; font-size:20px; font-family:Cambria;">Cena</td>
              <td width="300" align="center" style="font-weight:bold; font-size:20px; font-family:Cambria;">Broj kopija</td>
          </tr>
          @foreach (Knjiga knjiga in k.Knjige)
          {
              if (knjiga.Obrisana == false && knjiga.BrojKopija > 0)
              {
          <tr style="border-bottom:1px solid black; border-top:1px solid black">
              <td width="500" align="center">@knjiga.Naziv</td>
              <td width="500" align="center">@knjiga.Autor</td>
              <td width="300" align="center">@knjiga.ZanrKnjige.ToString()</td>
              <td width="300" align="center">@knjiga.Cena</td>
              <td width="300" align="center">@knjiga.BrojKopija</td>
          </tr>
              }
           }
      </table>
}
<br/>
<a href="~/Books/Bookstores">Nazad</a>
